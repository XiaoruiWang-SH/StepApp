<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/home_nav">

    <!-- Home navigation -->
    <navigation
        android:id="@+id/home_nav"
        app:startDestination="@id/homeFragment"
        app:graph="@navigation/home_nav_graph" />

    <!-- Training navigation -->
    <navigation
        android:id="@+id/training_nav"
        app:startDestination="@id/trainingFragment"
        app:graph="@navigation/training_nav_graph" />

    <!-- Record navigation -->
    <navigation
        android:id="@+id/record_nav"
        app:startDestination="@id/recordFragment"
        app:graph="@navigation/record_nav_graph" />

    <!-- Settings navigation -->
    <navigation
        android:id="@+id/setting_nav"
        app:startDestination="@id/settingFragment"
        app:graph="@navigation/setting_nav_graph" />
</navigation>
